<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SMS Tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/firstAccountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First SIM Account Name"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/secondAccountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Second SIM Account Name"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/serverUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server URL (e.g., http://192.168.1.10:3000)"
        android:inputType="textUri"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>

</LinearLayout>